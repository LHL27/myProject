/* pages/mine/mine.wxss */
.infoGroup{
  border: 1rpx solid #ccc;
  border-radius: 5rpx;
  padding: 20rpx 0rpx 20rpx 20rpx;
  overflow: hidden;
}
.infoLeft{
  width: 30%;
  float: left;
  font-size: 50rpx;
  font-weight: bold;
  line-height: 50rpx;
  padding: 25rpx 0rpx;
}
.infoRight{
  width:70%;
  float: right;
}
.toRightView{
  float: right;
  padding:31rpx 0%;
}
.avatarImage{
  width:100rpx;
  height: 100rpx;
  float: right;
  border-radius: 50%;
}
.toRightImage{
  width: 38rpx;
  height: 38rpx;
}
/* 发布，收藏，信息菜单栏 */
.myRelease,.myFavorites,.aboutMe{
  margin-top: 30rpx;
  border-bottom: 1rpx solid #ccc;
  font-size: 30rpx;
  font-weight: bold;
  padding: 10rpx;
}
.activeModule{
  background: #ccc;
}
.xiangXiaImg,.xiangShangImg{
  width: 38rpx;
  height: 38rpx;
  float: right;
}

/* 发布，收藏，信息显示框 */
.myReleaseView,.myFavoritesView,.aboutMeView{
  padding: 10rpx 5%;
  border: 1rpx solid #ccc;
  background: rgb(167, 241, 137);
  opacity: 0.7;
  border-top: 0rpx;
}

/* 我的发布,收藏 */
.releaseGoodsItem,.favoritesGoodsItem{
  background: white;
  overflow: hidden;
  padding: 15rpx;
  margin: 15rpx 0rpx;
  border-radius: 5%;
}
.releaseLeft,.favoritesLeft{
  width: 200rpx;
  height: 200rpx;
  float: left;
}
.releaseGoodsImg,.favoritesGoodsImg{
  width: 100%;
  height: 200rpx;
  border-radius: 5%;
}
.releaseRight,.favoritesRight{
  width: 365rpx;
  height: 200rpx;
  float: right;
  background: white;
  position: relative;
}
.priceView{
  position: absolute;
  bottom: 0rpx;
  left: 0rpx;
}
/* 我的收藏 */
.favoritesManView{
  padding-bottom: 20rpx;
}
/* 我的信息 */
.departmentGroup,.realNameGroup{
  /* margin-top: 20rpx; */
  /* border-bottom: 1rpx solid #ccc; */
  overflow: hidden;
  padding: 10rpx 0%;
}
.departmentView,.realNameView{
  font-size: 30rpx;
  width: 20%;
  float: left;
  height: 50rpx;
  box-sizing: border-box;
  line-height: 50rpx;
}
.departmentInput,.realNameInput{
  width: 80%;
  float: left;
  background: white;
  padding: 0rpx 15rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}
.changeAboutMe,.saveAboutMe{
  margin: 20rpx 38%;
  display: block;
}